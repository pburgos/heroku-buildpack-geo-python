#!/usr/bin/env bash
# bin/release <build-dir>

BIN_DIR=$(cd $(dirname $0); pwd) # absolute path
BUILD_DIR=$1

MANAGE_FILE=$(cd $BUILD_DIR && find . -maxdepth 3 -type f -name 'manage.py' | head -1)
MANAGE_FILE=${MANAGE_FILE:2}

cat <<EOF
---
config_vars:
  LIBRARY_PATH: /app/vendor/proj-4.8/lib:/app/vendor/gdal-1.9/lib
  LD_LIBRARY_PATH: /app/vendor/proj-4.8/lib:/app/vendor/gdal-1.9/lib 
EOF


if [[ $MANAGE_FILE ]]; then
cat <<EOF

addons:
  shared-database:5mb
EOF
fi
